<div class="banner flexColCC TextColor m-0 p-0">
    <h5 class="TextColor m-0 p-0">@BannerTxt</h5>
    @ChildContent
</div>

<style>
    .flexColCC {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .banner {
        height: 10%;        
        color: beige;
    }
    .TextColor {
        color: beige;
    }
</style>

@code {
    [Parameter] public string BannerTxt { get; set; } = string.Empty;
    [Parameter] public RenderFragment? ChildContent { get; set; }
}